<ul>
	<h1>Rate a Corgi</h1>
	<% @corgis.each do |corgi| %>
		<li>
			<%= corgi.owner %>'s pet corgi named <%= corgi.name  %>
			<p>
			<%= link_to image_tag(corgi.image.url(:large)), {:action => 'edit', :id => corgi.id, :controller => 'corgis'}  %>
			<p>
			Score: <%= corgi.ratings.average(:value).to_s%>
			<p>
			<% 0.upto(5) do |i| %> 
			<%= link_to i.to_s, corgi_ratings_url(corgi, value: i), method: 'POST' %>

			<% end %>
		</li>

	<% end %>
</ul>

<p> <%= link_to "New Corgi", new_corgi_url %></p>